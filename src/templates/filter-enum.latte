<div class="form-group row text-xl-end">
	<label n:name="$input" class="form-label col-form-label col-form-label-sm col-xl-3">{$label}</label>
	<div class="col-xl-9">
		<div n:tag-if="$isFiltered" class="input-group input-group-sm">
			<select n:name="$input" class="form-select form-select-sm"></select>
			<a n:if="$isFiltered" href="{$clearLink}" class="btn btn-outline-danger"><i class="fas fa-times fa-fw"></i></a>
		</div>
	</div>
</div>